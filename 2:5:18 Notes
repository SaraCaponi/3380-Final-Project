What languages are spoken in Sweden?

SELECT countrylanguage.Language, country.Name, country.Continent FROM country
INNER JOIN countrylanguage

ON country.Code = countrylanguage.CountryCode;
or
ON Code

WHERE country.Name = 'Sweden'

EXPLICIT INNER JOIN

SELECT Language, Name, Continent FROM country
INNER JOIN countrylanguage
ON Code = CountryCode;
WHERE Name = 'Sweden';

SELECT Language, Name, Continet FROM countrylanguage
INNER JOIN country
ON CountryCode = Code
WHERE Name = 'Sweden';

IMPLICIT INNER JOIN

SELECT Language, Name, Continent FROM country, countrylanguage
WHERE Code = CountryCode AND Name = 'Sweden';
ORDER BY Language DESC;

SELECT COUNT(Language) FROM country, countrylanguage
WHERE Code = CountryCode AND Name = 'Sweden';

SELECT Name FROM country ORDER BY SurfaceArea DESC LIMIT(3); 


describe countrylanguage;
describe country;